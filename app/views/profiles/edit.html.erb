<div class="page-wrapper">
  <h1 class="title">Usuário</h1>

  <p class="text-white f-20 m-0 col-12 col-md-2 mb-2"><%= current_user.name %></p>
  
  <% if @profile.photo.attached? %>
    <div class="my-5 flex center around">
      <%= cl_image_tag @profile.photo.key, height: 500, width: 500, crop: :fit %>
    </div>
  <% end %>
    
  <h1 class="title">Editar usuário</h1>

  <%= simple_form_for @profile, :url => profiles_path, :method => :patch do |f| %>

    <%= f.input :name %>
    <%= f.input :document_type %>
    <%= f.input :document_number %>
    <%= f.input :photo, as: :file %>

    <%= f.submit "Editar", class: "btn btn-success mt-5 w-100" %>
  <% end %>
</div>