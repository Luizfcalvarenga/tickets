<div class="page-wrapper">
  <h1 class="title">Editar Perfil</h1>
  <div class="d-flex justify-content-start">
  
    <%= simple_form_for([:partner_admin, @partner]) do |f| %>
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, height: 300, width: 300, crop: :fit , class: "rounded mx-auto d-block mb-5"%>
      <% end %>
    <div class="row">
      <div class="col-6 d-grid mb-3">
        <%= f.input :name %>
        <%= f.input :slug, wrapper: :input_group, prepend: "https://nuflowpass.herokuapp.com/", placeholder:"nome-exemplo" %>
        <%= f.input :cnpj %>
        <%= f.input :contact_email %>
        <%= f.input :contact_phone_1 %>
        <%= f.input :contact_phone_2 %>
        <%= f.input :about, :input_html => { 'rows' => 5 } %>
      </div>

      <div class="col-6">
        <%= f.input :cep %>
        <%= f.input :state_id, collection: State.all.order(:name) %>
        <%= f.input :city_id, as: :select, collection: @partner.state.cities, input_html: { id: 'cities_select' }, required: true %>
        <%= f.input :street_name %>
        <div class="row">
          <div class="col-md-4">
            <%= f.input :street_number %>
          </div>
          <div class="col-md-8">
            <%= f.input :neighborhood %>
          </div>
        </div>
        <%= f.input :address_complement %>
        <div class="mt-4">
          <%= f.input :logo, as: :file %>
        </div>
      </div>
    </div>

      <div class="text-center">
        <%= f.submit "SALVAR ALTERAÇÕES", class: "btn btn-success mt-2" %>
      </div>
    <% end %>
  </div>
</div>
