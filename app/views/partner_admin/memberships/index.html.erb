<div class="page-wrapper">
  <div class="p-5">
    <%= link_to new_partner_admin_membership_path do %>
      <p class="btn btn-primary w-10">Nova assinatura</p>
    <% end %>
  <div class="p-5">
    <% @memberships.each do |membership| %>
      <div class="membership bg-dark w-100 p-4 br-8 text-white center mb-2 row">
        <div class="col-lg-3">
          <p class="text-white f-20 m-0 mb-2"><%= membership.name %></p>
        </div>
        <div class="col-lg-2">
          <p class="text-white f-20 m-0 mb-2"><%= membership.description %></p>
        </div>
        <div class="col-lg-3">
          <p class="text-white f-20 m-0 mb-2"><%= membership.short_description %></p>
        </div>
        <div class="col-lg-2">
          <p class="text-white f-20 m-0 mb-2"><%= membership.price %></p>
        </div>
        <div class="col-lg-1">
          <%= link_to edit_partner_admin_membership_path(membership.id), class: "" do %>
            <p class="btn btn-primary m-0">Edit</p>
          <% end %>
        </div>
        <div class="col-lg-1">
          <%= link_to partner_admin_event_path(membership), class: "" do %>
            <p class="btn btn-primary m-0">Delete</p>
          <% end %>
        </div>
      </div>
    <% end %> 
  </div>
</div>