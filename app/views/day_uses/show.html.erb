<% if @day_use.photo.attached? %>
  <% if mobile_device? %>
    <%= cl_image_tag @day_use.photo.key, crop: :fill, class:"mw-100" %>   
  <% else %>
    <div class="flex center around mt-5">
        <div class="event-photo" style="background-image: linear-gradient(rgba(0,0,0,0.0), rgba(0,0,0,0.0)), url('<%= cl_image_path @day_use.photo.key, crop: :fit %>')">
      </div>
    </div>
  <% end %>
<% end %>
<div class="page-wrapper">
  <div class="text-center">
    <h1 class="title"><%= @day_use.name %></h1>

    <p class="fs-18 text-white">
      <%= @day_use.description %>
    </p>
    
    <div class="spacer-50"></div>

    <div class="row">
      <div class="col-12 col-md-12">
        <%  if @day_use_schedule.photo.attached? %>
          <%= cl_image_tag @day_use_schedule.photo.key, height: 350, crop: :fill, class:"mw-100" %>
        <% end %>
      </div>
      <div class="col-12 col-md-12 pt-4 pt-md-0">
        <h2 class="title"><%= @day_use_schedule.name %></h1>
        <p class="fs-18 text-white">
          <%= @day_use_schedule.description %>
        </p>
      </div>
    </div>

    <div class="spacer-50"></div>
    
  </div>
  <% if @day_use_schedule.open? && @day_use_schedule.open_slots_for_date(@date).present? %>
    <%= simple_form_for(@order) do |f| %>
      <react data-component="DayUseOrderItems" 
        data-day-use="<%= @day_use.to_json %>" 
        data-day-use-schedule="<%= @day_use_schedule.to_json %>"
        data-open-slots="<%= @day_use_schedule.open_slots_for_date(@date).to_json %>"
        data-pass-types="<%= @day_use_schedule.day_use_schedule_pass_types.active.to_json %>"
        data-date="<%= @date.to_json %>"
        data-fee-percentage="<%= @day_use.absorb_fee ? 0 : @day_use.fee_percentage %>"></react>

      <div class="text-center">
        <%= f.submit "Comprar ingressos", class: "btn btn-success w-100 mt-5 p-3" %>
      </div>
    <% end %>
  <% else %>
    <p class="danger-text p-4 br-8">Nenhum ingresso disponÃ­vel para essa data.</p>
  <% end %>
</div>
