<% if flash.any? %>
  <% flash.each do |key, value| %>
    <% if value.kind_of?(Array) %>
      <% value.each do |val| %>
        <p class="hide flash" data-type="<%= key %>" data-message="<%= val %>"></p>
      <% end %>
    <% else %>
      <p class="hide flash" data-type="<%= key %>" data-message="<%= value %>"></p>
    <% end %>
  <% end %>
<% end %>
