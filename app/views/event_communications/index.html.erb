<div class="page-wrapper">  
  <h1 class="title">Comunicados de evento</h1>
  <h2 class="title"><%= @event.name %></h2>
  <%= link_to event_path(id: @event.id), class: "btn btn-success" do %>
    <p class="m-0">Voltar</p>
  <% end %>

  <% if current_user.admin? %>
    <%= link_to new_event_event_communication_path(event_id: @event.id) do %>
      <p class="btn btn-success mb-5 w-100 px-5">Disparar nova comunicação</p>
    <% end %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th scope="col">Data</th>
        <th scope="col">Comunicado</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @event_communications.each do |event_communication| %>
      <tr>
        <td data-label="Data"><%= event_communication.created_at.strftime("%d/%m/%Y") %></td>
        <td data-label="Comunicado">
          <p class="fw-700 mb-2"><%= event_communication.subject %></p>
        </td>
        <td data-label="Ações">
          <%= link_to event_event_communication_path(event_id: @event.id, id: event_communication.id) do %>
            <p class="btn btn-success m-0 px-5">Ver comunicado</p>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>


</div>

