

<div class="page-wrapper flex center justify-content-around">
  <div class="bg-dark br-12 d-flex flex-column <%= mobile_device? ? "vh-50 w-90 p-3" : "vh-50 mt-5 w-50 p-5" %>">
    <div>
      <h2 class="text-center text-success f-20">Redefinir senha</h2>
    
      <p class="text-white">Insira seu e-mail abaixo. Você receberá um e-mail para redefinir sua nova senha.</p>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs wide">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      class: "w-100",
                      input_html: { autocomplete: "email", class: "w-100" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Receber email para redefinir senha", class: "btn btn-success my-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
