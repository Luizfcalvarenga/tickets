<% if mobile_device? %>
  <div class="page-wrapper" id="myGroup">
    <h1 class="text-success">Acesso NuflowPass</h1>

    <div class="nav nav-tabs flex gap-24" id="nav-tab" role="tablist">
      <button class="btn btn-success f-1x" id="nav-login-tab" data-bs-toggle="tab" data-bs-target="#nav-login" type="button" role="tab" aria-controls="nav-login" aria-selected="true">LOGIN</button>
      <button class="btn btn-success f-1x" id="nav-signup-tab" data-bs-toggle="tab" data-bs-target="#nav-signup" type="button" role="tab" aria-controls="nav-signup" aria-selected="true">CRIAR CONTA</button>
    </div>
    <div class="tab-content mt-5" id="nav-tabContent">
      <div class="tab-pane fade" id="nav-login" role="tabpanel" aria-labelledby="nav-login-tab">
        <div id="sign-in" class="mb-4 bg-dark p-3">
          <div class="h-100 p-5 br-12 d-flex flex-column vh-90">
            <h2 class="text-center text-success f-10">Fazer Login</h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="h-100">
                <div class="h-80">
                  <%= f.input :email, id: "email-signin",
                        required: false,
                        autofocus: true, input_html: { autocomplete: "email" } %>
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password", id: "password_signin" } %>
                  <%= f.input :remember_me, label: 'Continuar logado', as: :boolean, input_html: { checked: true } if devise_mapping.rememberable? %>

                  <label for="toggle-password-signin" class="mt-3">Mostrar senha</label>
                  <input type="checkbox" id="toggle-password-signin" />
                <div class="py-2">
                  <%= render "devise/shared/links" %>
                </div>
                </div>
                <div class="text-center my-3 h-20">
                  <%= f.button :submit, "Fazer login", class: "btn btn-success" %>
                </div>
              </div>
            <% end %>
            <p class="my-4">Não tem uma conta? Clique no botão Criar conta no topo desta página</p>
          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="nav-signup" role="tabpanel" aria-labelledby="nav-signup-tab">
        <div id="sign-up" class="mb-4 bg-dark p-3">
          <div class="br-12 d-flex flex-column p-5">
            <h2 class="text-center text-success f-10">Criar conta</h2>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="h-80">
                <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email" }%>
                  <%= f.input :name,
                              required: true,
                              autofocus: true %>
                  <%= f.input :document_number,
                              required: true,
                              autofocus: true,
                              input_html: { class: "mask-cpf" } %>
                  <%= f.input :phone_number,
                              required: true,
                              autofocus: true,
                              input_html: { class: "mask-phone" } %>
                  <%= f.input :cep,
                              required: true,
                              autofocus: true,
                              input_html: { class: "mask-cep" } %>
                  <%= f.input :password,
                              required: true,
                              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                              input_html: { autocomplete: "new-password", id: "password_signup" } %>
                  <%= f.input :password_confirmation,
                              required: true,
                              label: "Confirmação de senha",
                              input_html: { autocomplete: "new-password", id: "password_confirmation" } %>
                </div>
                <div class="">
                  <label for="toggle-password-signup">Mostrar senha</label>
                  <input type="checkbox" id="toggle-password-signup" />
                </div>
              </div>
              <div class="text-center mt-5 h-20">
                <%= f.button :submit, "Criar nova conta", class: "btn btn-success" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
