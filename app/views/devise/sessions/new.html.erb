<div class="page-wrapper vh-100 w-100 flex center around bg-darker">
  <div class="mb-5 flex column center center-box">
    <h2 class="fw-700 text-color-primary text-uppercase f-bebas">Login</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-100" }) do |f| %>
      <div class="form-inputs w-100">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    class: "w-100",
                    input_html: { autocomplete: "email", class: "w-100" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions w-100 flex center around my-3">
        <%= f.button :submit, "Entrar", class: "w-100 btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

